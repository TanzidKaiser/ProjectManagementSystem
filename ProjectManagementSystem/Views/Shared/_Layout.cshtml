<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/fullcalendar.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/matrix-style.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mytemplate/")css/matrix-media.css" />
    <link href="@Url.Content("~/Content/mytemplate/")font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/Content/mytemplate/")css/jquery.gritter.css" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>


    <script src="@Url.Content("~/Content/mytemplate/")js/excanvas.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery.ui.custom.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/bootstrap.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery.flot.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery.flot.resize.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery.peity.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/fullcalendar.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/matrix.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/matrix.dashboard.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery.gritter.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/matrix.interface.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/matrix.chat.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery.validate.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/matrix.form_validation.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery.wizard.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery.uniform.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/select2.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/matrix.popover.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery.dataTables.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/matrix.tables.js"></script>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--Header-part-->
    <div id="header">
        <h1><a href="dashboard.html">Matrix Admin</a></h1>
    </div>
    <!--close-Header-part-->
    <!--top-Header-menu-->
    <div id="user-nav" class="navbar navbar-inverse">
        <ul class="nav">
            <li class="dropdown" id="profile-messages">
                <a title="" href="#" data-toggle="dropdown" data-target="#profile-messages" class="dropdown-toggle"><i class="icon icon-user"></i>  <span class="text">Welcome User</span><b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a href="#"><i class="icon-user"></i> My Profile</a></li>
                    <li class="divider"></li>
                    <li><a href="#"><i class="icon-check"></i> My Tasks</a></li>
                    <li class="divider"></li>
                    <li><a href="login.html"><i class="icon-key"></i> Log Out</a></li>
                </ul>
            </li>
            <li class="dropdown" id="menu-messages">
                <a href="#" data-toggle="dropdown" data-target="#menu-messages" class="dropdown-toggle"><i class="icon icon-envelope"></i> <span class="text">Messages</span> <span class="label label-important">5</span> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a class="sAdd" title="" href="#"><i class="icon-plus"></i> new message</a></li>
                    <li class="divider"></li>
                    <li><a class="sInbox" title="" href="#"><i class="icon-envelope"></i> inbox</a></li>
                    <li class="divider"></li>
                    <li><a class="sOutbox" title="" href="#"><i class="icon-arrow-up"></i> outbox</a></li>
                    <li class="divider"></li>
                    <li><a class="sTrash" title="" href="#"><i class="icon-trash"></i> trash</a></li>
                </ul>
            </li>
            <li class=""><a title="" href="#"><i class="icon icon-cog"></i> <span class="text">Settings</span></a></li>
            @*<li class="">@Html.ActionLink("Logout","Signout","Login")><i class="icon icon-cog"></i></li>*@
            @*<a href="@Url.Action("Signout","Login")">Logout</a>*@
        </ul>
    </div>
    <!--close-top-Header-menu-->
    <!--start-top-serch-->
    <div id="search">
        <input type="text" placeholder="Search here..." />
        <button type="submit" class="tip-bottom" title="Search"><i class="icon-search icon-white"></i></button>
    </div>
    <!--close-top-serch-->
    <!--sidebar-menu-->
    <div id="sidebar">
        <a href="#" class="visible-phone"><i class="icon icon-home"></i> Dashboard</a>
        <ul>
            <li>@Html.ActionLink("Add/Update User", "UserCreate", "User")</li>
            <li>@Html.ActionLink("Add/Update Project", "ProjectCreate", "Project")</li>
            <li>@Html.ActionLink("Assign Resource Person", "Index", "AssignProject")</li>            
            <li>@Html.ActionLink("View Project", "Index", "ViewProject", new { UserId = @HttpContext.Current.User.Identity.Name }, null)</li>
            <li>@Html.ActionLink("Add/Update Task", "Index", "Task")</li>
            <li>@Html.ActionLink("Add Comment", "CommentCreate", "Comment")</li>
            <li>@Html.ActionLink("View Comment", "ViewComments", "Comment")</li>            
            
        </ul>
    </div>
    <!--sidebar-menu-->




    <div class="content body-content">


        @RenderBody()



        @*<hr />*@

        <!--Footer-part-->
        <div class="row-fluid">
            <div id="footer" class="span12"> 2013 &copy; Matrix Admin. Brought to you by <a href="http://themedesigner.in">Themedesigner.in</a> </div>
        </div>
        <!--end-Footer-part-->
    </div>
    @*@Scripts.Render("~/bundles/jqueryval")*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
