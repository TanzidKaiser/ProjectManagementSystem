@model IEnumerable<ProjectManagementSystem.Models.Task>
@{
    ViewBag.Title = "ProjectDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #levelWidth {
        width: 129px;
        font-size: 11px;
        font-weight: bold;
        color: #dc7e1b;
    }

    #ProductSearch {
        width: 170px;
        font-size: 15px;
        height: 40px;
    }

    #inputMargin {
        margin-left: 137px;
    }

    .table th {
        font-size: 11px;
        color: #08c;
    }
    /*table {
            width: 100%;
            margin: 20px 0;
            border-collapse: collapse;
        }*/

    table tbody td {
        padding: 5px 10px;
        text-align: center;
        font-weight: bold;
        font-size: 11px;
        color: #696c6f;
    }

    table td {
        text-align: center;
    }

    input[type="checkbox"] {
        margin: 0px 3px 0px;
        /*margin-top: 1px \9;
            line-height: normal;*/
    }

    #ColorForCheckboxLebel {
        color: #08c;
        font-weight: bold;
        font-size: 11px;
    }
</style>

<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="tip-bottom">Form elements</a><a href="@Url.Action("Signout","Login")" style="color:red">Logout</a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span5">
                <div class="widget-box">
                    <div class="widget-title">

                        <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>Add Project</h5>
                    </div>
                    <div class="widget-content nopadding">
                        @using (Html.BeginForm())
                        {
                            if (ViewBag.project != null)
                            {
                                <div class="form-horizontal">
                                    @foreach (var item in ViewBag.project)
                                    {
                                        <div class="control-group">

                                            <label class="control-label">Name</label>
                                            <div class="controls">
                                                <input type="text" value="@item.ProjectName" />
                                            </div>

                                        </div>
                                        <div class="control-group">

                                            <label class="control-label">Code name</label>
                                            <div class="controls">
                                                <input type="text" value="@item.ProjectCode" />

                                            </div>

                                        </div>
                                        <div class="control-group">

                                            <label class="control-label">Description</label>
                                            <div class="controls">
                                                <textarea name="Description" id="Description">@item.Description</textarea>
                                            </div>

                                        </div>
                                        <div class="control-group">

                                            <label class="control-label">Status</label>
                                            <div class="controls">
                                                <input type="text" value="@item.Status" />

                                            </div>

                                        </div>
                                        <div class="control-group">

                                            <label class="control-label">Possible Start Date</label>
                                            <div class="controls">
                                                <input type="text" value="@item.ProjectStartDate" />

                                            </div>

                                        </div>
                                        <div class="control-group">

                                            <label class="control-label">Possible End Date</label>
                                            <div class="controls">
                                                <<input type="text" value="@item.ProjectEndDate" />

                                            </div>

                                        </div>
                                        <div class="control-group">

                                            <label class="control-label">Duration(In days)</label>
                                            <div class="controls">
                                                <input type="text" value="@item.ProjectDurationDays" />

                                            </div>

                                        </div>
                                        <div class="control-group">

                                            <label class="control-label">Uploaded File</label>
                                            <div class="controls">
                                                <textarea id="Description"></textarea>
                                            </div>

                                        </div>

                                        <div class="control-group">

                                            <label class="control-label">Assigned Members</label>
                                            <div class="controls">
                                                <textarea>
                                                    @foreach (var assign in ViewBag.assignMembers)
                                                    {
                                                       @assign.UserName 
                                                    }
                                                </textarea>
                                            </div>

                                        </div>

                                        <br />
                                    }
                                </div>
                            }
                        }
                    </div>

                </div>
            </div>

            <div class="span7">
                <div class="widget-box">
                    <div class="widget-title">

                        <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>Task List</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <table class="table table-bordered table-striped" id="myTable">

                            <thead>
                                <tr>
                                    <td style="font-size:medium">Description</td>
                                    <td style="font-size:medium">Assign to</td>
                                    <td style="font-size:medium">Priority</td>
                                    <td style="font-size:medium">Assigned by</td>
                                    <td style="font-size:medium">Due Date</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var task in Model)
                                {

                                    <tr class="odd gradeX">
                                        <td>


                                            @Html.DisplayFor(modelItem => task.TaskDescription)

                                        </td>
                                        <td>


                                            @Html.DisplayFor(modelItem => task.AssignTo)

                                        </td>
                                        <td>


                                            @Html.DisplayFor(modelItem => task.Priority)

                                        </td>
                                        <td>

                                            @Html.DisplayFor(modelItem => task.AssignedBy)

                                        </td>

                                        <td>

                                            @Html.DisplayFor(modelItem => task.TaskDueDate)

                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

